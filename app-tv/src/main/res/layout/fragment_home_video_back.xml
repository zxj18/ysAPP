<?xml version="1.0" encoding="utf-8"?>
<com.vodbyte.freetv.widget.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.vodbyte.freetv.mvp.view.activity.home.HomeVideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/video_title_root_0" style="@style/video_title_root">

            <ImageView style="@style/video_title_image" />

            <TextView android:id="@+id/video_title_0" style="@style/video_title_text" />
        </LinearLayout>

        <LinearLayout android:id="@+id/video_root_0" style="@style/video_card_root">

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_1"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_1" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_2"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_2" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_3"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_3" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_4"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_4" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_5"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_5" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout style="@style/video_item_root">

                <RelativeLayout
                    android:id="@+id/video_card_root_6"
                    style="@style/video_item_card_root">

                    <ImageView style="@style/video_item_card_image" />

                    <TextView style="@style/video_item_card_text" />

                    <ImageView
                        style="@style/video_item_card_rank"
                        android:src="@drawable/ranking_6" />

                    <TextView style="@style/video_item_card_tag" />

                    <ImageView style="@style/video_item_card_play_icon" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_sub_title_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x12">

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_1"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_1" />
            </RelativeLayout>

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_2"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_2" />
            </RelativeLayout>

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_3"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_3" />
            </RelativeLayout>

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_4"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_4" />
            </RelativeLayout>

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_5"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_5" />

            <RelativeLayout style="@style/video_type_item_root">

                <TextView
                    android:text="加载中..."
                    android:id="@+id/video_type_6"
                    style="@style/video_type_item_text"
                    android:background="@drawable/bg_type_6" />
            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/layout_ad"/>

        <LinearLayout android:id="@+id/video_title_root_1" style="@style/video_title_root">

            <ImageView style="@style/video_title_image" />

            <TextView
                android:id="@+id/video_title_1"
                style="@style/video_title_text" />
        </LinearLayout>




    </LinearLayout>
</com.vodbyte.freetv.widget.VerticalScrollView>

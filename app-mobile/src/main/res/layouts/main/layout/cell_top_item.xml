<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/shape2_10dp_corners"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/iv_cover_cell_vod"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_10dp_top_corners"
            android:src="@drawable/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_score_cell_vod_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black_transparent_55"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_smaller"
            tools:text="9.4分" />

        <TextView
            android:id="@+id/tv_recentWords_cell_vod_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/black_transparent_55"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_smaller" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name_cell_vod_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_name_cell2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/tv_name_cell_vod_home" />

        <TextView
            android:id="@+id/tv_name_cell3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/tv_name_cell2" />

        <TextView
            android:id="@+id/tv_name_cell4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/text_size_small"
            android:layout_above="@+id/tv_play" />

        <TextView
            android:id="@+id/tv_play"
            android:text="立即播放"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/shape_top_play_bg"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>

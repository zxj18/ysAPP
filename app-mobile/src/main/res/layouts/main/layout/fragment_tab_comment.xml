<?xml version="1.0" encoding="utf-8"?>
<com.vodbyte.movie.widget.ResizeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resize_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.vodbyte.android.widget.commentview.CommentView
            android:id="@+id/myCommentView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            layout="@layout/comment_editor"
            android:visibility="visible" />

    </LinearLayout>

</com.vodbyte.movie.widget.ResizeFrameLayout>
